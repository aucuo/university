<Window x:Class="Client_desk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Client" Height="350" Width="600">
    <StackPanel Margin="10">
        <Button x:Name="btnSendMessage" Content="Send Message" Click="BtnSendMessage_Click" Margin="5"/>
        <Button x:Name="btnUploadImage" Content="Upload Image" Click="BtnUploadImage_Click" Margin="5"/>
        <Button x:Name="btnSendJson" Content="Send JSON Data" Click="BtnSendJson_Click" Margin="5"/>
        <TextBox x:Name="txtResponse" Height="200" Margin="5" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
    </StackPanel>
</Window>
